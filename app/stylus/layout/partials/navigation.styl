@import '../../utilities/vars'
@import '../../utilities/mixins'

/* NAVIGATION */
main.nav-open
  transform translateX(calc(-100% + 65px))

nav.nav-open
  transform translateX(calc(-100% + 65px))
  .nav-panel
    transform translateX(100%)

nav
  padding 29px 0
  transitions()
  position relative
  z-index 2
  background $yellow
  +mobile()
    padding 10px 0
  +portrait()
    padding 9px 0

.nav-header
  padding 0
  margin 0
  background $yellow
  +portrait()
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
  li
    list-style none
    .logo
      display block
      img
        margin-left 15px
        width 100%
        max-width 115px
        +mobile()
          max-width 61px

.nav-panel
  transitions()
  +mobile()
    min-height 100vh
    position absolute
    top -35px
    left 0
    right 0
    bottom 0
    background $yellow
    z-index -1
    //transform translateX(200%)
    padding-top 35px
    padding-left 20px
  ul
    margin 0
    padding 0
    display flex
    flex-direction row
    float right
    +mobile()
      flex-wrap wrap
    +tablet()
      flex-wrap: wrap;
      justify-content: flex-end;
    +portrait()
      flex-wrap: wrap;
      justify-content: flex-end;
    li
      list-style none
      +mobile()
        flex 1 1 100%
        max-width 100%
      a
        color $white
        font-size 1em
        display block
        text-transform uppercase
        padding 13px 9px
        &:hover
          color $black
        +tablet()
          font-size .875em
        +portrait()
          padding 10px 9px
    .lang
      margin-left 15px
      +mobile()
        flex 1 1 20%
        max-width 20%
        margin 20px 0
      a
        padding 13px 0
        +mobile()
          padding 13px 9px
      a.active
        color $black
    .lang-first
      margin-left 49px
      +tablet()
        margin-left: 60px;
      +mobile()
        margin-left 0


.nav-menu-icon
  display none
  +mobile()
    display block

/* BURGER ICON */
.nav-icon
  width 26px
  height 19px
  position relative
  margin 0
  transform rotate(0deg)
  transitions()
  cursor pointer
  +mobile()
    width 35px
    height 20px
    float right
    margin-top 2px
  &:hover
    span
      background: $blue


.nav-icon span
  display block
  position absolute
  height 3px
  width 100%
  background $white
  border-radius 9px
  opacity 1
  left 0
  transform rotate(0deg)
  transitions()
  +mobile()
    background $white


/* Icon 3 */

.nav-icon span:nth-child(1)
  top 0px

.nav-icon span:nth-child(2), .nav-icon span:nth-child(3)
  top 8px

.nav-icon span:nth-child(4)
  top 16px

.nav-icon.open span:nth-child(1)
  top 18px
  width 0%
  left 50%

.nav-icon.open span:nth-child(2)
  transform rotate(45deg)

.nav-icon.open span:nth-child(3)
  transform rotate(-45deg)

.nav-icon.open span:nth-child(4)
  top 18px
  width 0%
  left 50%