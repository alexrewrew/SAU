.slider-head
  position relative
  max-height 639px
  +mobile()
    max-height unset
  &:after
    pseudo(block, absolute)
    top 0
    left 0
    right 0
    bottom 0
    background #182c38
    opacity .5
    z-index 1
  .slick-arrow
    position absolute
    z-index: 20
    right 20%
    bottom 62px
    border-radius 50%
    background $gray
    color $gray3
    text-align center
    font-size 1.125em
    width 30px
    height 30px
    cursor pointer
    padding-top 5px
    z-index 10
    transitions()
    +mobile()
      bottom 15px
      z-index 30
    +portrait()
      bottom 30px
    &:hover
      transform rotate(360deg)
      background $yellow
      color $white
  .fa-angle-left
    right 18.5%
  .fa-angle-right
    right 13%
    +mobile()
      right 15px
  .slick-dots
    position absolute
    bottom 62px
    left 17%
    margin 0
    padding 0
    display flex
    flex-direction row
    z-index 10
    +mobile()
      bottom 15px
      left 15px
    +portrait()
      bottom 30px
    li
      list-style none
      width 10px
      height 10px
      border-radius 50%
      border 2px solid transparent
      background $gray3
      margin-left 24px
      cursor pointer
      transitions()
      +mobile()
        margin-left 0
        margin-right 24px
      &:focus
        outline none
      &:hover
        background $white
      button
        color transparent
        border 0
        width 10px
        height 10px
        border-radius 50%
        background $gray3
        visibility: hidden
        &:focus
          outline none
    .slick-active
      width 14px
      height 14px
      top -2px
      position relative
      border 2px solid $yellow
      background $white
      button
        width 14px
        height 14px

.slider-special
  border-bottom 1px solid #dbdbdb
  padding 0
  margin 56px 0 47px
  position relative
  overflow-y visible
  &:before
    pseudo(block, absolute)
    height 100%
    left 0
    top 0
    bottom 0
    z-index 2
    width 120px
    background: linear-gradient(to right, rgba(249,249,249,1) 0%, rgba(249,249,249,1) 52%, rgba(249,249,249,0) 100%);
  &:after
    pseudo(block, absolute)
    height 100%
    right 0
    top 0
    bottom 0
    z-index 2
    width 120px
    background: linear-gradient(to right, rgba(249,249,249,0) 0%, rgba(249,249,249,1) 48%, rgba(249,249,249,1) 100%);
  li
    font-size: 1em
    line-height: 1.38;
    text-transform uppercase
    min-height 35px
    a
      color: rgba(0, 0, 0, 0.5);
      padding-bottom 14px
      position relative
      font-weight: 400
      &:after
        pseudo(block, absolute)
        bottom 0px
        left 0
        right 0
        width 100%
        height 2px
        background $blue
        z-index 2
        opacity 0
        transitions()
      &:hover
        color: $blue
    a.active
      color $blue
      font-weight 700
      &:after
        opacity 1

  .slick-arrow
    position absolute
    z-index: 20
    top 0
    border-radius 50%
    background transparent
    color $gray3
    text-align center
    font-size 1.125em
    width 30px
    height 30px
    cursor pointer
    padding-top 5px
    z-index 10
    transitions()
    &:hover
      transform rotate(360deg)
      background $gray2
  .fa-angle-left
    left 0
  .fa-angle-right
    right 0
