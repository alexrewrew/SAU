.benefits
  background $blue2
  padding-top 60px
  padding-bottom: 6px;
  h2
    margin-bottom: 15px;
  .link-regular
    color $yellow
    margin-bottom 62px


.benefits-list
  margin 0
  padding 0
  display flex
  flex-direction row
  flex-wrap wrap
  li
    list-style none
    flex 1 1 25%
    max-width 25%
    +mobile()
      flex 1 1 50%
      max-width 50%
      padding-left 15px
    .icon-circle
      margin-bottom 69px
      span
        margin-left 0
        margin-right 0
        width 75px
        height 75px
        margin-bottom 37px
        background $white
        &:after, &:before
          background $white
          display block
      h5
        color $white
        text-align left

.video-container
  display flex
  margin 0
  padding 0
  flex-direction column
  +portrait()
    flex-direction row
  li
    display flex
    justify-content center
    border-radius 5px
    background #063854
    width 171px
    height: 103px
    margin-bottom: 30px
    padding-top 26px
    +portrait()
      margin-right 20px
    &:hover
      .icon-circle
        .fa
          transform rotate(360deg)
    .icon-circle
      margin-bottom 0
      top: 25px;
      display inline-block
      span
        width 52px
        height 52px
        margin-bottom 0
        &:after
          display block
          top -16px
          left -16px
          right -16px
          bottom -16px
          height calc(100% + 32px)
          width calc(100% + 32px)
        &:before
          top -8px
          left -8px
          right -8px
          bottom -8px
          height calc(100% + 16px)
          width calc(100% + 16px)
        .fa
          color $white
          font-size 24px
          margin-left 5px
          transitions()

.univ-benefits
  padding-top 102px
  padding-bottom 44px

.univ-benefits-list
  display flex
  flex-direction row
  flex-wrap wrap
  padding 0
  margin 32px 0
  li
    list-style none
    position relative
    padding-left 50px
    letter-spacing: 0.4px;
    font-size 1.125em
    font-weight 700
    margin-bottom 26px
    flex 1 1 50%
    +mobile()
      flex 1 1 100%
    &:after
      pseudo(block, absolute)
      width 28px
      height 28px
      border 3px solid #fffae5
      border-radius 50%
      background $yellow
      top -3px
      left 0
  li.benefit-no
    &:after
      border 1px solid $black
      background $white
